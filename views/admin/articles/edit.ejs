<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>

<style>
    :root {
        --pink-primary: #FF69B4;
        --pink-light: #FFB6C1;
        --green-primary: #98FF98;
        --green-dark: #4CAF50;
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        border-radius: 15px;
    }

    .card-header {
        background: linear-gradient(45deg, var(--pink-light), var(--pink-primary));
        color: white;
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
    }

    .card-body {
        padding: 2rem;
    }

    .form-control {
        border: 2px solid var(--pink-light);
        border-radius: 10px;
        padding: 12px;
        margin-bottom: 1rem;
    }

    .form-control:focus {
        border-color: var(--pink-primary);
        box-shadow: 0 0 0 0.2rem rgba(255,105,180,0.25);
    }

    select.form-control {
        background-color: white;
    }

    .btn-success {
        background-color: var(--green-dark);
        border: none;
        padding: 12px 30px;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        background-color: var(--green-primary);
        transform: translateY(-2px);
    }

    .btn-secondary {
        background-color: var(--pink-light);
        border: none;
        padding: 12px 30px;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: var(--pink-primary);
        transform: translateY(-2px);
    }

    .button-group {
        display: flex;
        gap: 1rem;
    }

    label {
        color: #666;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Edit Article</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/articles/update">
                <input type="hidden" name="id" value="<%= article.id %>">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="title" 
                           placeholder="Insira o nome do artigo"
                           value="<%= article.title %>" required>
                </div>
                
                <div class="form-group">
                    <textarea class="form-control" name="body" 
                              placeholder="Insira seu artigo" 
                              id="article"></textarea>
                </div>
                
                <div class="form-group">
                    <br>
                    <label for="category">Category:</label>
                    <select name="category" id="category" class="form-control">
                        <% categories.forEach((category) => { %>
                            <option value="<%- category.id %>" 
                                    <%= category.id == article.categoryId ? 'selected' : '' %>>
                                <%- category.title %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="button-group">
                    <button class="btn btn-success">Update</button>
                    <a href="/admin/articles" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="content" style="display: none">
    <%- article.body %>
</div>

<%- include("../../partials/footer.ejs") %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#article",
        height: 400,
        skin: "oxide",
        content_css: "default",
        plugins:['table','link','preview','lists','image','media'],
        toolbar:'undo redo | formatselect | bold italic backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | table | link | preview',
        init_instance_callback: () => {
            tinymce.activeEditor.setContent(document.getElementById('content').innerHTML)
        }
    })
</script>
