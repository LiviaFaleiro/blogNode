<%- include('../../partials/header.ejs')%>
<%- include('../../partials/navbar.ejs')%>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient p-4" style="background: #c7e7d2;">
                    <h2 class="text-black text-center mb-0 fw-bold">Post a new article</h2>
                </div>
                <div class="card-body p-4">
                    <form method="POST" action="/articles/save">
                        <div class="mb-4">
                            <label for="categoryTitle" class="form-label fw-bold" style="color: #1a472a;">Article title</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: #1a472a;">
                                    <i class="fas fa-tag"></i>
                                </span>
                                <input type="text" 
                                       class="form-control form-control-lg border-2" 
                                       id="categoryTitle"
                                       name="title" 
                                       placeholder="Enter article title"
                                       style="border-color: #1a472a;">
                            </div>
                        </div>
                        <textarea class="form-control mt-4" name="body" rows="10" placeholder="Enter article content" id="article"></textarea>
                        <br>
                        <label for="categoryTitle" class="form-label fw-bold" style="color: #1a472a;">Category</label>
                        <br>
                        <select name="categoria" class="form-control">
                            <% categories.forEach((categoria) => { %>
                                <option value="<%= categoria.id %>"><%= categoria.title %></option>
                            <% }) %>
                        </select>
                        <br>
                        <div class="d-grid gap-2">
                            <button class="btn btn-lg text-white fw-bold" 
                                    type="submit"
                                    style="background-color: #1a472a; hover: darken;">
                                <i class="fas fa-plus-circle me-2"></i>
                                Post Article
                            </button>
                        </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.btn:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #471a1a;
    box-shadow: 0 0 0 0.25rem rgba(255, 105, 180, 0.25);
}
</style>

<%- include('../../partials/footer.ejs')%>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector:'#article',
        plugins:['table','link','preview','lists','image','media'],
        toolbar:'undo redo | formatselect | bold italic backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | table | link | preview'
    });
</script>