<%- include('../../partials/header.ejs')%>
<%- include('../../partials/navbar.ejs')%>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient p-4" style="background: linear-gradient(to right, #98FB98, #ff69b4);">
                    <h2 class="text-black text-center mb-0 fw-bold">Create New Category</h2>
                </div>
                <div class="card-body p-4">
                    <form method="POST" action="/categories/save">
                        <div class="mb-4">
                            <label for="categoryTitle" class="form-label fw-bold" style="color: #ff69b4;">Category Name</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: #98FB98;">
                                    <i class="fas fa-tag"></i>
                                </span>
                                <input type="text" 
                                       class="form-control form-control-lg border-2" 
                                       id="categoryTitle"
                                       name="title" 
                                       placeholder="Enter category name"
                                       style="border-color: #98FB98;">
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-lg text-white fw-bold" 
                                    type="submit"
                                    style="background-color: #ff69b4; hover: darken;">
                                <i class="fas fa-plus-circle me-2"></i>
                                Create Category
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.btn:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #ff69b4;
    box-shadow: 0 0 0 0.25rem rgba(255, 105, 180, 0.25);
}
</style>

