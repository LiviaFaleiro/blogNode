<%- include('partials/header.ejs')%>
<%- include('partials/homeNavBar.ejs')%>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <article class="article-content my-5">
                    <!-- Article Header -->
                    <header class="mb-4">
                        <h1 class="display-4 fw-bold mb-3" style="color: #333;">
                            <%= article.title %>
                        </h1>
                        <div class="meta-info mb-4">
                            <span class="text-muted">
                                <%= new Date(article.createdAt).toLocaleDateString('en-US', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %>
                            </span>
                        </div>
                    </header>

                    <!-- Article Body -->
                    <div class="article-body">
                        <div class="content" style="font-size: 1.2rem; line-height: 1.8; color: #2c2c2c;">
                            <%- article.body %>
                        </div>
                    </div>
                </article>

                <!-- Share Section -->
                <div class="share-section my-5 py-4 border-top border-bottom">
                    <h5 class="text-uppercase mb-3" style="color: #1a472a;">Share this article</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-dark rounded-circle">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-outline-dark rounded-circle">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .article-content {
            font-family: 'Source Serif Pro', Georgia, serif;
        }
        
        .article-body img {
            max-width: 100%;
            height: auto;
            margin: 2rem 0;
            border-radius: 8px;
        }
        
        .article-body p {
            margin-bottom: 1.5rem;
        }
        
        .btn-outline-dark {
            width: 40px;
            height: 40px;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }
        
        .btn-outline-dark:hover {
            background-color: #98ff98;
            border-color: #98ff98;
            color: white;
        }
    </style>
</body>
<%- include('partials/footer.ejs')%>
